<div class="row sandbox-content">
  <div class="col-md-4 plugin-column">
    <h1 class="page-title sandbox-title">Sandboxes</h1>
    {{#collection.length}}
    <div class="sandboxes-table">
      {{#collection}}
        <div class="sandboxes-filter-row">
          <div class="sandboxes-filter-name">
            <span class="glyphicon glyphicon-filter"></span>
            <strong><a href="#plugins/filters/{{Name}}">{{Name}}</a></strong>
          </div>
        </div>
        {{#Outputs}}
        <div class="sandboxes-output-row">
          <div class="sandboxes-output-name"><a href="#sandboxes/{{PluginName}}/outputs/{{ShortFilename}}">{{Name}}{{^Name}}[Untitled]{{/Name}}</a></div>
          <div class="sandboxes-output-type"><small>{{Type}}</small></div>
          <div class="sandboxes-output-graph">
            <div class="checkbox" id="sandboxes-checkbox-enabled-{{Name}}/{{PluginName}}/{{ShortFilename}}">
              <label>
                <input type="checkbox" class="sandboxes-graph-checkbox" id="#sandboxes/{{PluginName}}/outputs/{{ShortFilename}}/graph-order/1">
                Graph
              </label>
            </div>
          </div>
        </div>
        {{/Outputs}}
      {{/collection}}
    </div>
    {{/collection.length}}
  </div>
  <div class="col-md-8 plugin-column">
    <div>
      <span>
        <h2>Dashboards</h2>

        <div>
          <table>
            <tr>
              <td colspan="2">
                <select id="dashboardMenu" size=2>
                  <optgroup id="existingDashboards" label="Edit a Dashboard">
                  </optgroup>
                  <option>New Dashboard</option>
                <select>
              </td>
              <td valign="top">
                <input type="text" id="dashboard-name-input" placeholder="Dashboard Name">
              </td>
            </tr>
            <tr>
              <td rowspan="2" align="right">
                <a href="#sandboxes-set-dashboard-name">Save</a>
              </td>
            </tr>
          </table>
        </div>


